{sys, [
       {lib_dirs, ["../deps"]},
       {erts, [{mod_cond, derived}, {app_file, strip}]},
       {app_file, strip},
       {rel, "erl_shib", "1",
        [
         kernel,
         stdlib,
         sasl,
         lager,
         cowboy,
         thrift_erl,
         mimetypes,
         json,
         jiffy,
         econfig,
         sgte,
         iso8601,
         goldrush,
         erl_shib
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "erl_shib"},
       {profile, embedded},
       {incl_cond, derived},
       {mod_cond, all},
       {excl_archive_filters, [".*"]}, %% Do not archive built libs
       {excl_sys_filters, ["^bin/.*", "^erts.*/bin/(dialyzer|typer)",
                           "^erts.*/(doc|info|include|lib|man|src)"]},
       {excl_app_filters, ["\.gitignore"]},
       {app, hipe, [{incl_cond, exclude}]},
       {app, goldrush, [{incl_cond, include}]},
       {app, lager, [{incl_cond, include}]},
       {app, cowboy, [{incl_cond, include}]},
       {app, thrift_erl, [{incl_cond, include}]},
       {app, mimetypes, [{incl_cond, include}]},
       {app, json, [{incl_cond, include}]},
       {app, jiffy, [{incl_cond, include}]},
       {app, econfig, [{incl_cond, include}]},
       {app, sgte, [{incl_cond, include}]},
       {app, iso8601, [{incl_cond, include}]},
       {app, erl_shib, [{mod_cond, app}, {incl_cond, include}, {lib_dir, ".."}]}
      ]}.

{target_dir, "erl_shib"}.

{overlay, [
           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {copy, "files/erl_shib", "bin/erl_shib"},
           {copy, "files/erl_shib.cmd", "bin/erl_shib.cmd"},
           {copy, "files/start_erl.cmd", "bin/start_erl.cmd"},
           {copy, "files/install_upgrade.escript", "bin/install_upgrade.escript"},
           {copy, "files/sys.config", "releases/\{\{rel_vsn\}\}/sys.config"},
           {copy, "files/vm.args", "releases/\{\{rel_vsn\}\}/vm.args"},
           {copy, "../erl_shib.ini.sample", "erl_shib.ini"}
          ]}.
